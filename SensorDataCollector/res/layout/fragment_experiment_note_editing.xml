<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_experiment_note_editing_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/imageview_expriment_note_editing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/text_notes"
            android:src="@drawable/icon_notes"/>

        <TextView
            android:id="@+id/extview_experiment_note_editing_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageview_expriment_note_editing"
            android:textSize="20sp" 
            android:text="@string/text_notes"/>

        <TextView
            android:id="@+id/textview_experiment_note_editing_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/extview_experiment_note_editing_main_text"
            android:layout_below="@id/extview_experiment_note_editing_main_text"
            android:textSize="12sp"
            android:text="@string/text_write_a_note_for_the_experiment"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/edittext_experiment_note_editing_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_experiment_note_editing_buttons"
        android:layout_below="@id/layout_experiment_note_editing_heading"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:gravity="top|left"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/layerlist_background_border_lines"
        android:imeOptions="actionNone"
        android:inputType="text|textAutoCorrect|textAutoComplete|textCapSentences|textMultiLine|textLongMessage" />

    <LinearLayout
        android:id="@id/layout_experiment_note_editing_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <!-- save the note and then return -->

        <Button
            android:id="@+id/button_experiment_note_editing_add_note"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="@string/text_add_note" />

        <!-- return -->
    </LinearLayout>

</RelativeLayout>