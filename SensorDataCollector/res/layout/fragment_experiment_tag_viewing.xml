<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/textview_fragment_tag_viewing_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:text="@string/text_experiment_tags"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:id="@+id/layout_fragment_tag_viewing_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textview_fragment_tag_viewing_label"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textview_fragment_tag_viewing_more_tags"
        android:layout_toRightOf="@id/textview_fragment_tag_viewing_label"
        android:gravity="bottom"
        android:orientation="horizontal" >

    </LinearLayout>	
    
    <TextView
        android:id="@+id/textview_fragment_tag_viewing_more_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/textview_fragment_tag_viewing_label"        
        android:background="@drawable/rounded_corner"
        android:gravity="center_horizontal"
        android:minWidth="48dp"
        android:padding="0dp"
        android:text="@string/text_more_more"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
