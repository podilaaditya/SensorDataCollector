<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ExperimentSetupFragment" >

    <TextView
        android:id="@+id/tv_experiment_setup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/textview_experiment_setup_new"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_experiment_setup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_experiment_setup_title"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/textview_experiment_name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/et_experiment_setup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_experiment_setup_name"
        android:layout_alignBottom="@+id/tv_experiment_setup_name"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tv_experiment_setup_name"
        android:ems="10"
        android:inputType="text|textAutoCorrect|textAutoComplete" />

    <RelativeLayout
        android:id="@+id/layout_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_experiment_setup_name"
        android:layout_below="@+id/et_experiment_setup_name" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_tags"
        android:layout_below="@+id/layout_tags" >

        <TextView
            android:id="@+id/tv_notes"            
            android:layout_toRightOf="@+id/imv_notes_plusminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="3dp"
            android:text="@string/textview_experiment_notes"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <ImageView
            android:id="@+id/imv_notes_plusminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_marginTop="8dp"
            android:contentDescription="@string/img_plus_green_white"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/plus_icon"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_sensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_notes"
        android:layout_below="@+id/layout_notes" >

        <TextView
            android:id="@+id/tv_sensors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="3dp"
            android:text="@string/textview_experiment_sensors"
            android:layout_toRightOf="@+id/imv_sensors_plusminus"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <ImageView
            android:id="@+id/imv_sensors_plusminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_marginTop="8dp"
            android:contentDescription="@string/img_plus_green_white"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/search_icon" />

        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_sensor_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/layout_buttons"
        android:layout_below="@+id/layout_sensors" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" >

        <Button
            android:id="@+id/button_experiment_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="94dp"
            android:minHeight="0dp"
            android:text="@string/button_run_text_run" />

        <Button            
            android:id="@+id/button_experiment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@+id/button_experiment_run"
            android:minHeight="0dp"
            android:text="@string/button_back_text_back" />
    </RelativeLayout>

</RelativeLayout>