<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/sensor_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

 <RelativeLayout
     android:id="@+id/layout_progressbar_loading"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical" 
     android:visibility="gone">
     
     <TextView
         android:id="@+id/textview_progressbar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:text="@string/text_discover_sensors_text" />
     
     <ProgressBar
         android:id="@+id/progresswheel_task_in_progress"
         style="?android:attr/progressBarStyleLarge"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/textview_progressbar"
         android:visibility="gone"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true" />
     
     <ProgressBar
         android:id="@+id/progressbar_task_in_progress"
         style="?android:attr/progressBarStyleHorizontal"
         android:layout_below="@id/textview_progressbar"
         android:layout_width="match_parent"
         android:layout_height="12dip"
         android:layout_marginLeft="12dp"
         android:layout_marginRight="12dp"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true" 
         android:visibility="gone"/>


  </RelativeLayout>

</FrameLayout>